{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cmake generate project (linux)",
            "command": "cmake",
            "args": [
                "-G",
                "'Unix Makefiles'",
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-DCMAKE_BUILD_TYPE=Debug",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
        },
        {
            "type": "shell",
            "label": "cmake generate project (windows)",
            "command": "cmake",
            "args": [
                "-G",
                "'Visual Studio 17 2022'",
                "-A",
                "x64",
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
        },
        {
            "label": "cmake build",
            "type": "shell",
            "command": "cmake --build build --config Debug",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}